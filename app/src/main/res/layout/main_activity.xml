<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:id="@+id/top">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp" >

            <ImageButton
                android:id="@+id/letter"
                android:src="@drawable/alpha"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:layout_row="0"
                android:layout_column="0"
                android:scaleType="fitCenter"
                android:background="@null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/letter"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="Alphabets"
                android:textSize="20sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="60dp">

            <ImageButton
                android:id="@+id/dish"
                android:src="@drawable/food"
                android:layout_height="120dp"
                android:layout_width="130dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dish"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="Dishes"
                android:textSize="20sp"/>
        </RelativeLayout>


   </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center_vertical"
        android:id="@+id/middle"
        android:layout_below="@+id/top">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp" >

            <ImageButton
                android:id="@+id/greet"
                android:src="@drawable/greet"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/greet"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="Greetings"
                android:textSize="20sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="60dp">

            <ImageButton
                android:id="@+id/poem"
                android:src="@drawable/poe"
                android:layout_height="120dp"
                android:layout_width="130dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poem"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="Proverbs"
                android:textSize="20sp"/>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/middle">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp" >

            <ImageButton
                android:id="@+id/dict"
                android:src="@drawable/dic"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dict"
                android:layout_centerInParent="true"
                android:clickable="false"
                android:text="Dictionary"
                android:textSize="20sp"/>
        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>